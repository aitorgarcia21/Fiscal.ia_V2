{
  "manifest_version": 3,
  "name": "Francis - Agent Fiscal Global",
  "version": "1.0.0",
  "description": "Francis - Agent fiscal global omnipresent sur toutes les pages web avec reconnaissance vocale et IA",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Francis CRM Assistant",
    "default_icon": {
      "16": "icons/francis-16.png",
      "32": "icons/francis-32.png",
      "48": "icons/francis-48.png",
      "128": "icons/francis-128.png"
    }
  },
  "icons": {
    "16": "icons/francis-16.png",
    "32": "icons/francis-32.png", 
    "48": "icons/francis-48.png",
    "128": "icons/francis-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "francis-widget.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
