{
  "name": "francis-desktop",
  "version": "1.0.0",
  "description": "Application desktop Francis - Assistant IA pour conseillers en gestion de patrimoine",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "webpack serve --mode development & electron . --dev",
    "build": "webpack --mode production && electron-builder",
    "build:renderer": "webpack --mode production",
    "build:app": "electron-builder",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "watch": "webpack --watch --mode development",
    "dist": "npm run build"
  },
  "keywords": [
    "francis",
    "desktop",
    "electron",
    "fiscal",
    "patrimoine",
    "ia"
  ],
  "author": "Francis Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-react-jsx": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.7",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "axios": "^1.11.0",
    "electron-store": "^8.1.0",
    "form-data": "^4.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1"
  },
  "build": {
    "appId": "com.francis.desktop",
    "productName": "Francis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "identity": null,
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
